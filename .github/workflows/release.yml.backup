name: Release Build

on:
  push:
    tags:
      - 'v*'
  workflow_dispatch:
    inputs:
      version:
        description: 'Version to release (e.g., 1.0.0)'
        required: true
        default: '1.0.0'
      build_type:
        description: 'Build type'
        required: true
        default: 'test'
        type: choice
        options:
          - test
          - demo
          - production

env:
  GO_VERSION: '1.25'

jobs:
  build:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        include:
          - os: linux
            arch: amd64
            ext: ''
          - os: linux
            arch: arm64
            ext: ''
          - os: windows
            arch: amd64
            ext: '.exe'
          - os: darwin
            arch: amd64
            ext: ''
          - os: darwin
            arch: arm64
            ext: ''

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Go
        uses: actions/setup-go@v4
        with:
          go-version: ${{ env.GO_VERSION }}

      - name: Download dependencies
        run: go mod download

      - name: Build application
        run: |
          echo "Building for ${{ matrix.os }}-${{ matrix.arch }}..."
          chmod +x scripts/build-with-config.sh
          ./scripts/build-with-config.sh \
            --os ${{ matrix.os }} \
            --arch ${{ matrix.arch }} \
            --type ${{ github.event.inputs.build_type || 'test' }} \
            --version ${{ github.event.inputs.version || github.ref_name }} \
            --output-dir dist

      - name: Upload build artifacts
        uses: actions/upload-artifact@v4
        with:
          name: cloudbridge-client-${{ matrix.os }}-${{ matrix.arch }}
          path: |
            dist/cloudbridge-client-${{ matrix.os }}-${{ matrix.arch }}${{ matrix.ext }}
            dist/config-*.yaml
            dist/cloudbridge-client-*.tar.gz
          retention-days: 30

  release:
    needs: build
    runs-on: ubuntu-latest
    if: github.event_name == 'push' && startsWith(github.ref, 'refs/tags/')
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Download all artifacts
        uses: actions/download-artifact@v4
        with:
          path: artifacts

      - name: Create release
        uses: softprops/action-gh-release@v1
        with:
          tag_name: ${{ github.ref_name }}
          name: CloudBridge Client ${{ github.ref_name }}
          body: |
            ## CloudBridge Client ${{ github.ref_name }}
            
            ### Downloads
            
            **Linux:**
            - [cloudbridge-client-linux-amd64](https://github.com/${{ github.repository }}/releases/download/${{ github.ref_name }}/cloudbridge-client-linux-amd64)
            - [cloudbridge-client-linux-arm64](https://github.com/${{ github.repository }}/releases/download/${{ github.ref_name }}/cloudbridge-client-linux-arm64)
            
            **Windows:**
            - [cloudbridge-client-windows-amd64.exe](https://github.com/${{ github.repository }}/releases/download/${{ github.ref_name }}/cloudbridge-client-windows-amd64.exe)
            
            **macOS:**
            - [cloudbridge-client-darwin-amd64](https://github.com/${{ github.repository }}/releases/download/${{ github.ref_name }}/cloudbridge-client-darwin-amd64)
            - [cloudbridge-client-darwin-arm64](https://github.com/${{ github.repository }}/releases/download/${{ github.ref_name }}/cloudbridge-client-darwin-arm64)
            
            ### Installation
            
            **Linux/macOS:**
            ```bash
            # Download and install
            wget https://github.com/${{ github.repository }}/releases/download/${{ github.ref_name }}/cloudbridge-client-linux-amd64
            chmod +x cloudbridge-client-linux-amd64
            sudo mv cloudbridge-client-linux-amd64 /usr/local/bin/cloudbridge-client
            ```
            
            **Windows:**
            ```powershell
            # Download and run
            Invoke-WebRequest -Uri "https://github.com/${{ github.repository }}/releases/download/${{ github.ref_name }}/cloudbridge-client-windows-amd64.exe" -OutFile "cloudbridge-client.exe"
            .\cloudbridge-client.exe version
            ```
            
            ### Configuration
            
            Create a configuration file `config.yaml`:
            ```yaml
            relay:
              host: "edge.2gc.ru"
              port: 30082
            
            auth:
              type: "jwt"
              secret: "YOUR_JWT_SECRET"
            
            api:
              base_url: "https://edge.2gc.ru:30082"
              insecure_skip_verify: true
            ```
            
            ### Usage
            
            ```bash
            # Check version
            cloudbridge-client version
            
            # Start P2P mode
            cloudbridge-client p2p --token YOUR_JWT_TOKEN --config config.yaml
            ```
            
            ### Documentation
            
            - [Quick Start Guide](https://github.com/${{ github.repository }}/blob/main/QUICK_START.md)
            - [Build System](https://github.com/${{ github.repository }}/blob/main/BUILD_SYSTEM.md)
            - [Production Requirements](https://github.com/${{ github.repository }}/blob/main/PRODUCTION_REQUIREMENTS.md)
          files: |
            artifacts/cloudbridge-client-linux-amd64/cloudbridge-client-linux-amd64
            artifacts/cloudbridge-client-linux-arm64/cloudbridge-client-linux-arm64
            artifacts/cloudbridge-client-windows-amd64/cloudbridge-client-windows-amd64.exe
            artifacts/cloudbridge-client-darwin-amd64/cloudbridge-client-darwin-amd64
            artifacts/cloudbridge-client-darwin-arm64/cloudbridge-client-darwin-arm64
          draft: false
          prerelease: false

  manual-release:
    needs: build
    runs-on: ubuntu-latest
    if: github.event_name == 'workflow_dispatch'
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Download all artifacts
        uses: actions/download-artifact@v4
        with:
          path: artifacts

      - name: Create manual release
        uses: softprops/action-gh-release@v1
        with:
          tag_name: v${{ github.event.inputs.version }}
          name: CloudBridge Client v${{ github.event.inputs.version }} (${{ github.event.inputs.build_type }})
          body: |
            ## CloudBridge Client v${{ github.event.inputs.version }} (${{ github.event.inputs.build_type }})
            
            This is a ${{ github.event.inputs.build_type }} build.
            
            ### Downloads
            
            **Linux:**
            - [cloudbridge-client-linux-amd64](https://github.com/${{ github.repository }}/releases/download/v${{ github.event.inputs.version }}/cloudbridge-client-linux-amd64)
            - [cloudbridge-client-linux-arm64](https://github.com/${{ github.repository }}/releases/download/v${{ github.event.inputs.version }}/cloudbridge-client-linux-arm64)
            
            **Windows:**
            - [cloudbridge-client-windows-amd64.exe](https://github.com/${{ github.repository }}/releases/download/v${{ github.event.inputs.version }}/cloudbridge-client-windows-amd64.exe)
            
            **macOS:**
            - [cloudbridge-client-darwin-amd64](https://github.com/${{ github.repository }}/releases/download/v${{ github.event.inputs.version }}/cloudbridge-client-darwin-amd64)
            - [cloudbridge-client-darwin-arm64](https://github.com/${{ github.repository }}/releases/download/v${{ github.event.inputs.version }}/cloudbridge-client-darwin-arm64)
            
            ### Installation
            
            See [Quick Start Guide](https://github.com/${{ github.repository }}/blob/main/QUICK_START.md) for detailed installation instructions.
          files: |
            artifacts/cloudbridge-client-linux-amd64/cloudbridge-client-linux-amd64
            artifacts/cloudbridge-client-linux-arm64/cloudbridge-client-linux-arm64
            artifacts/cloudbridge-client-windows-amd64/cloudbridge-client-windows-amd64.exe
            artifacts/cloudbridge-client-darwin-amd64/cloudbridge-client-darwin-amd64
            artifacts/cloudbridge-client-darwin-arm64/cloudbridge-client-darwin-arm64
          draft: true
          prerelease: ${{ github.event.inputs.build_type != 'production' }}
